---
import { BLOG_SLUG } from '@/consts'
import { ThemeLink } from './link/theme-link'

type Props = { tags?: string[] }

const { tags } = Astro.props

// Optional: Filter out anything deeper than h3
const sortedTags =
  tags?.sort().map(t => t.toLowerCase().replace(/\s+/g, '-')) || [] // Convert to slug format
---

<ul class="flex flex-row flex-wrap items-center gap-1.5">
  {
    sortedTags.map(tag => (
      <li class="border-border/50 hover:border-border trans-color rounded-full border px-3 py-1.5 text-xs">
        <ThemeLink
          startingColor="text-foreground"
          endingColor="text-theme"
          href={`${BLOG_SLUG}/tag/${tag}`}
        >
          #{tag}
        </ThemeLink>
      </li>
    ))
  }
</ul>
