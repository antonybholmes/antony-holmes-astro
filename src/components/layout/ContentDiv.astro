---
import type { IClassProps } from '@/interfaces/class-props'
import type { ColorMode } from '@/interfaces/color-mode'
import { ContentDiv as BaseContentDiv } from './content-div'

interface Props extends IClassProps {
  mode?: ColorMode
  contentCls?: string
}

const { mode = 'light', contentCls, className } = Astro.props
---

<BaseContentDiv className={className} contentCls={contentCls} mode={mode}>
  <slot name="left" />

  <slot name="main" />

  <slot name="right" />
</BaseContentDiv>
