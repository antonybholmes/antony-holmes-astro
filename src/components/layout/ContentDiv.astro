---
import type { IClassProps } from '@/interfaces/class-props'
import type { ColorMode } from '@/interfaces/color-mode'
import { ContentDiv as BaseContentDiv } from './content-div'

interface Props extends IClassProps {
  mode?: ColorMode
  colCls?: string
  contentCls?: string
}

const {
  mode = 'light',
  colCls = 'xl:w-3/5',
  contentCls,
  className,
} = Astro.props
---

<BaseContentDiv
  className={className}
  colCls={colCls}
  contentCls={contentCls}
  mode={mode}
>
  <!-- <slot name="left" /> -->

  <slot name="main" />

  <!-- <slot name="right" /> -->
</BaseContentDiv>
