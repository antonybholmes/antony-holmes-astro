---
import { BLOG_SLUG } from '@/consts'
import type { IClassProps } from '@/interfaces/class-props'
import { format } from 'date-fns'

interface Props extends IClassProps {
  date: Date
}

const { date, className } = Astro.props

const formattedDate = format(date, 'MMM dd')
const formattedYear = format(date, 'yyyy')
---

<time datetime={date.toISOString()} class={className}>
  {formattedDate}, <a
    href={`${BLOG_SLUG}/year/${formattedYear}`}
    class="hover:underline">{formattedYear}</a
  >
</time>
